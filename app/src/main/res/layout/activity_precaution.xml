<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3e3e3e"
    android:orientation="vertical"
    tools:context=".Precaution">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Protective measures against the Coronavirus (COVID-19)"
            android:padding="4dp"
            android:textColor="#fff"
            android:textSize="26dp"
            android:textStyle="bold"
            android:layout_margin="6dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow advice provided by your local public health agency.\nTo prevent the spread of COVID-19:"
            android:padding="4dp"
            android:textColor="#fff"
            android:textSize="17dp"
            android:layout_margin="6dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/follow"
            android:textColor="#fff"
            android:padding="4dp"

            android:textSize="17dp"
            android:layout_margin="6dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/avoid"
            android:padding="4dp"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_margin="6dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stay Safe, Stay at Home for you and for your Family"
            android:padding="4dp"
            android:layout_gravity="center"
            android:textSize="17dp"
            android:textColor="#fff"
            android:layout_margin="6dp"
            />










    </LinearLayout>

    </ScrollView>

</LinearLayout>